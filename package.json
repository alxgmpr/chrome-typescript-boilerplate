{
  "name": "chrome-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Development environment TypeScript + Preact for Chrome Extensions",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run build:background && pnpm run build:content && pnpm run build:popup",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "build:background": "esbuild src/background.ts --outfile=dist/background.js --minify",
    "build:content": "esbuild src/contentScript.ts --outfile=dist/contentScript.js --minify",
    "build:popup": "esbuild src/popup.tsx --outfile=dist/popup.js --minify"
  },
  "keywords": [
    "chrome",
    "extension",
    "typescript",
    "boilerplate",
    "starter"
  ],
  "author": "Alex Gompper",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.250",
    "esbuild": "0.19.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "preact": "^10.18.2"
  },
  "engines": {
    "node": ">=18"
  }
}
